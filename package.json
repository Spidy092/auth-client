      "import": "./dist/react/AuthProvider.js",
      "require": "./dist/react/AuthProvider.cjs"
    },
    "./react/useAuth": {
      "import": "./dist/react/useAuth.js",
      "require": "./dist/react/useAuth.cjs"
    },
